		print $synthesis_general  "<td>Max NWD</td><td>"."<a href='",$link,"'><img border=1 height=120 src='",$link, "'></a>\n\n";
		$link=~s/\.png/\.pdf/;
		print $synthesis_general "<a href='",$link,"'>PDF</a> ";
		$link=~s/\.pdf/\.txt/;
		print $synthesis_general "<a href='",$link,"'> Table</a> ";
		print $synthesis_general "</td>";
